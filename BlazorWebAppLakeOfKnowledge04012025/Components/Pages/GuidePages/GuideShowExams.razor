@page "/guide-show-exams"

@using BlazorWebAppLakeOfKnowledge04012025.Services
@inject UserService UserService

@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "GuideOnly")]

<!-- Body Section -->
<main style="padding: 20px; min-height: 400px; display: flex; flex-direction: column; align-items: center;" dir="rtl">

    <h4>ברוך הבא, @UserService.userName</h4>
    <p> הינך מחובר/ת כעת כ : @UserService.role</p>

    
    <h3>צפייה במבחנים</h3>
    <!-- Dropdown -->
    <div style="margin-bottom: 20px;">
        <select style="width: 300px; padding: 10px; border-radius: 5px; border: 1px solid #ccc;">
            <option>מבחן פסיכומטרי - 15/06/2024</option>
            <option>מבחן פסיכומטרי - 10/09/2023</option>
            <option>מבחן פסיכומטרי - 22/12/2023</option>
            <option>מבחן פסיכומטרי - 05/01/2024</option>
        </select>
    </div>

    <!-- Exam Details -->
    <div style="text-align: center; background-color: #f5f5f5; border-radius: 10px; padding: 20px; width: 100%; max-width: 600px;">
        <h4>מבחן לדוגמה</h4>
        <p>שאלה 1: שאלה לדוגמה בנושא כמותי</p>
        <p>שאלה 2: שאלה לדוגמה בנושא אנגלית</p>
        <p>שאלה 3: שאלה לדוגמה בנושא מילולי</p>
    </div>
</main>

