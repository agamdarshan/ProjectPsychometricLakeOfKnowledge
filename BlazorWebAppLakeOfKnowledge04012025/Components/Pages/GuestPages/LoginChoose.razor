@page "/login-choose"
@using BlazorWebAppLakeOfKnowledge04012025.Services
@inject UserService UserService



<!-- Body Section -->
<main style="padding: 20px; min-height: 400px; display: flex; justify-content: center; align-items: center; flex-direction: column; text-align: center;" dir="rtl">

    <h4>ברוך הבא, @UserService.userName</h4>
    <p> הינך מחובר/ת כעת כ : @UserService.role</p>
 
    <h2>בחר סוג התחברות</h2>
    <div style="margin-top: 20px;">
        <!-- Student Registration Button -->
        <button onclick="location.href='/login-student'" style="width: 300px; height: 60px; background-color: #FFB84D; border: none; border-radius: 10px; color: white; font-size: 18px; margin-bottom: 20px; cursor: pointer;">
            התחברות סטודנט
        </button>

        <!-- Guide Registration Button -->
        <button onclick="location.href='/login-guide'" style="width: 300px; height: 60px; background-color: #66B3FF; border: none; border-radius: 10px; color: white; font-size: 18px; cursor: pointer;">
            התחברות מדריך
        </button>

        <!-- Admin Registration Button -->
        <button onclick="location.href='/login-admin'" style="width: 300px; height: 60px; background-color: #FF6666; border: none; border-radius: 10px; color: white; font-size: 18px; cursor: pointer;">
            התחברות מנהל
        </button>

    </div>
</main>
