@page "/guide-main-page"

@using BlazorWebAppLakeOfKnowledge04012025.Services
@inject UserService UserService

@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "GuideOnly")]

<!-- Body Section -->
<main style="padding: 20px; min-height: 400px; display: flex; justify-content: center; align-items: center; flex-direction: column; text-align: center;" dir="rtl">

    <h4>ברוך הבא, @UserService.userName</h4>
    <p> הינך מחובר/ת כעת כ : @UserService.role</p>

    
    <div style="display: flex; flex-direction: column; gap: 20px;">
        <!-- Show Questions Button -->
        <button style="width: 300px; height: 60px; background-color: #d9e8fb; border: none; border-radius: 10px; color: black; font-size: 18px; cursor: pointer;">
            <a href="/guide-show-questions" style="text-decoration: none; color: black;">הצגת שאלות</a>
        </button>

        <!-- Show Exams Button -->
        <button style="width: 300px; height: 60px; background-color: #e8d9fb; border: none; border-radius: 10px; color: black; font-size: 18px; cursor: pointer;">
            <a href="/guide-show-exams" style="text-decoration: none; color: black;">הצגת מבחנים</a>
        </button>

        <!-- Update Questions Button -->
        <button style="width: 300px; height: 60px; background-color: #fbd9d9; border: none; border-radius: 10px; color: black; font-size: 18px; cursor: pointer;">
            <a href="/guide-update-questions" style="text-decoration: none; color: black;">הצגת שאלות ותשובות</a>
        </button>
    </div>
</main>
