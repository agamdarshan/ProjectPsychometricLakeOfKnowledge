@page "/admin-data-analysis"

@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "AdminOnly")]

@using BlazorWebAppLakeOfKnowledge04012025.Services
@inject UserService UserService



<!-- Body Section -->
<main style="padding: 20px; min-height: 400px; display: flex; flex-direction: column; align-items: center;" dir="rtl">

    <h4>ברוך הבא, @UserService.userName</h4>
    <p> הינך מחובר/ת כעת כ : @UserService.role</p>

    
    <h3>ניתוח נתונים</h3>

    <!-- Buttons -->
    <div style="display: flex; gap: 30px; margin-top: 20px;">
        <button style="padding: 15px 30px; background-color: #d9e8fb; border: none; border-radius: 10px; cursor: pointer; font-size: 16px;">
            ניתוח נתוני סטודנט אינדיבידואלי
        </button>
        <button style="padding: 15px 30px; background-color: #e8d9fb; border: none; border-radius: 10px; cursor: pointer; font-size: 16px;">
            ניתוח נתוני מדריך אינדיבידואלי
        </button>
        <button style="padding: 15px 30px; background-color: #fbd9d9; border: none; border-radius: 10px; cursor: pointer; font-size: 16px;">
            ניתוח נתונים כללי
        </button>
    </div>

    <!-- General Data Section -->
    <div style="margin-top: 40px; text-align: center; background-color: #f5f5f5; padding: 20px; border-radius: 10px; width: 100%; max-width: 800px;">
        <h4>נתונים כלליים</h4>
        <p>
            כמות סטודנטים רשומים: 1,234<br />
            כמות מדריכים פעילים: 45<br />
            סך כל המבחנים במערכת: 250<br />
            סך כל השאלות במאגר: 5,680<br />
            מגמת עלייה במספר הסטודנטים ב-3 החודשים האחרונים: 15%<br />
            מגמת עלייה במספר השאלות שהועלו על ידי מדריכים ב-6 החודשים האחרונים: 20%
        </p>
    </div>
</main>
