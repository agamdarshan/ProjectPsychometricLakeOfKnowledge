@page "/student-practice"

@using BlazorWebAppLakeOfKnowledge04012025.Services
@inject UserService UserService

@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "StudentOnly")]

<section style="padding: 20px; min-height: 400px; display: flex; flex-direction: column; align-items: center; text-align: center;" dir="rtl">
    

    <h4>ברוך הבא, @UserService.userName</h4>
    <p> הינך מחובר/ת כעת כ : @UserService.role</p>


    <!-- Practice Section -->
    <h2>תרגול שאלות</h2>
    <div style="margin-top: 30px; display: flex; flex-direction: column; gap: 20px;">
        <!-- Quantitative Practice -->
        <button style="width: 300px; padding: 15px; background-color: #d9e8fb; border: none; border-radius: 10px; cursor: pointer; font-size: 16px;">
            תרגול שאלות כמותי
        </button>

        <!-- English Practice -->
        <button style="width: 300px; padding: 15px; background-color: #e8d9fb; border: none; border-radius: 10px; cursor: pointer; font-size: 16px;">
            תרגול שאלות אנגלית
        </button>

        <!-- Verbal Practice -->
        <button style="width: 300px; padding: 15px; background-color: #fbd9d9; border: none; border-radius: 10px; cursor: pointer; font-size: 16px;">
            תרגול שאלות מילולי
        </button>
    </div>

    <!-- Questions Section -->
    <div style="margin-top: 30px; text-align: center;">
        <h3>שאלות לדוגמה</h3>
        <div style="margin-top: 20px; text-align: right;">
            <!-- Question 1 -->
            <div style="margin-bottom: 20px;">
                <p>שאלה 1: שאלה לדוגמה כמותית</p>
                <label><input type="radio" name="question1" /> תשובה א</label><br />
                <label><input type="radio" name="question1" /> תשובה ב</label><br />
                <label><input type="radio" name="question1" /> תשובה ג</label><br />
                <label><input type="radio" name="question1" /> תשובה ד</label>
            </div>

            <!-- Question 2 -->
            <div style="margin-bottom: 20px;">
                <p>שאלה 2: שאלה לדוגמה אנגלית</p>
                <label><input type="radio" name="question2" /> תשובה א</label><br />
                <label><input type="radio" name="question2" /> תשובה ב</label><br />
                <label><input type="radio" name="question2" /> תשובה ג</label><br />
                <label><input type="radio" name="question2" /> תשובה ד</label>
            </div>

            <!-- Question 3 -->
            <div style="margin-bottom: 20px;">
                <p>שאלה 3: שאלה לדוגמה מילולית</p>
                <label><input type="radio" name="question3" /> תשובה א</label><br />
                <label><input type="radio" name="question3" /> תשובה ב</label><br />
                <label><input type="radio" name="question3" /> תשובה ג</label><br />
                <label><input type="radio" name="question3" /> תשובה ד</label>
            </div>
        </div>
    </div>
</section>
